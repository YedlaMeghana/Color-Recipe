<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>servlets.LogoutServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>NewDesignServlet</servlet-name>
        <servlet-class>servlets.NewDesignServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>MeshServlet</servlet-name>
        <servlet-class>servlets.MeshServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ScreenTypeServlet</servlet-name>
        <servlet-class>servlets.ScreenTypeServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditDesginServlet</servlet-name>
        <servlet-class>servlets.EditDesginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateDesignServlet</servlet-name>
        <servlet-class>servlets.UpdateDesignServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>NewDesignServlet</servlet-name>
        <url-pattern>/newdesign</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>MeshServlet</servlet-name>
        <url-pattern>/addMesh</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ScreenTypeServlet</servlet-name>
        <url-pattern>/addScreen</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditDesginServlet</servlet-name>
        <url-pattern>/editDesgin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateDesignServlet</servlet-name>
        <url-pattern>/updateDesign</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
